{
	"name": "@gauzy/mcp-auth",
	"version": "0.1.0",
	"description": "MCP Authorization Server for Ever Gauzy Platform used as Identity Server",
	"author": {
		"name": "Ever Co. LTD",
		"email": "ever@ever.co",
		"url": "https://ever.co"
	},
	"homepage": "https://gauzy.co",
	"repository": {
		"type": "git",
		"url": "https://github.com/ever-co/ever-gauzy.git"
	},
	"bugs": {
		"url": "https://github.com/ever-co/ever-gauzy/issues"
	},
	"license": "AGPL-3.0",
	"private": true,
	"type": "commonjs",
	"scripts": {
		"build": "npx rimraf build && npx tsc --project tsconfig.json",
		"build:prod": "pnpm nx build mcp-auth --configuration=production",
		"build:dev": "pnpm nx build mcp-auth --configuration=development",
		"start": "pnpm nx serve mcp-auth",
		"test": "node build/main.js --test",
		"dev": "pnpm nest start --watch",
		"start:prod": "node dist/apps/api/main.js",
		"lint": "eslint .",
		"clean": "rimraf dist coverage"
	},
	"dependencies": {
		"@gauzy/auth": "workspace:*",
		"@gauzy/contracts": "workspace:*",
		"@gauzy/core": "workspace:*",
		"@nestjs/typeorm": "catalog:",
		"typeorm": "catalog:"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"rimraf": "catalog:",
		"typescript": "catalog:"
	}
}
