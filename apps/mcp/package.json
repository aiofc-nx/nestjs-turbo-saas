	"scripts": {
		"build": "npx rimraf build && npx tsc --project tsconfig.json",
		"build:prod": "pnpm nx build mcp --configuration=production",
		"build:dev": "pnpm nx build mcp --configuration=development",
		"start": "pnpm nx serve mcp",
		"test": "node build/index.js --test",
		"dev": "pnpm nest start --watch",
		"start:prod": "node dist/apps/api/main.js",
		"lint": "eslint .",
		"clean": "rimraf dist coverage"
	},
	"dependencies": {
		"@gauzy/mcp-server": "workspace:*",
